<idea-plugin>
    <id>edu.msu.cbowen.cse335intellijplugin</id>
    <name>CSE335 CLion Course Extensions</name>
    <vendor>Charles B. Owen</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="edu.msu.cbowen.cse335intellijplugin.AppSettingsState"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="edu.msu.cbowen.cse335intellijplugin.AppSettingsConfigurable"
                                 id="edu.msu.cbowen.cse335intellijplugin.AppSettingsConfigurable"
                                 displayName="CSE335 Plugin Settings"/>
    </extensions>

    <actions>
        <!--
          All of the following menu groups add the action PopupDialogAction to menus in different ways.
          Note that even though these groups reuse the same action class, in each use the action ids are unique.

          GroupedActions demonstrates declaring an action group using the default ActionGroup implementation provided by the
          IntelliJ Platform framework. (Note the lack of a group "class" attribute.) GroupedActions gets inserted after
          PopupDialogAction in the Tools menu. Because the group's implementation is default, it cannot impose
          enable/disable conditions. Instead it must rely on the conditions imposed by the parent menu where it is inserted.
          It declares one action in the group.
        -->
        <group id="MainMenu.CSE335"
               text="CSE335" description="CSE 335 course plugin options" popup="true">
            <add-to-group group-id="MainMenu" anchor="before" relative-to-action="HelpMenu"/>
            <action id="MainMenu.CSE335.Option1"
                    class="edu.msu.cbowen.cse335intellijplugin.PopupDialogAction"
                    text="Option 1" description="First example menu option.">
            </action>
        </group>

        <action id="MainMenu.CSE335.Option2"
                class="edu.msu.cbowen.cse335intellijplugin.PopupDialogAction"
                text="Option 2" description="Second example menu option.">
            <add-to-group group-id="MainMenu.CSE335" anchor="last"/>
        </action>

    </actions>
</idea-plugin>
